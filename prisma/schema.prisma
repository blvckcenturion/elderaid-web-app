generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Institution {
  id                Int         @id @default(autoincrement())
  name              String
  NIT               String      @unique
  main_representative String
  email             String      @unique
  phone             String
  address           String
  lat               Float?
  lng               Float?
  password          String
  image_url         String
  Campaigns         Campaign[]

  @@index([name])
}

model Campaign {
  id                Int         @id @default(autoincrement())
  institution_id    Int
  name              String
  requirement       String
  beneficiary_type  String
  start_date        DateTime
  end_date          DateTime
  Institution       Institution  @relation(fields: [institution_id], references: [id])
  CampaignImages    CampaignImage[]
  Donations         Donation[]

  @@index([name])
  @@index([institution_id])
}

model CampaignImage {
  id         Int        @id @default(autoincrement())
  campaign_id Int
  image_url  String
  Campaign   Campaign  @relation(fields: [campaign_id], references: [id])

  @@index([campaign_id])
}

model Donation {
  id             Int        @id @default(autoincrement())
  campaign_id    Int
  benefactor_id  String
  description    String
  quantity       Int
  donation_date  DateTime
  status         DonationStatus
  Campaign       Campaign  @relation(fields: [campaign_id], references: [id])

  @@index([benefactor_id, status])
  @@index([campaign_id])
}

enum DonationStatus {
  to_collect
  on_the_way
  received
}